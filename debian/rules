#!/usr/bin/make -f

DEB_CLEAN_EXCLUDE+=autom4te.cache


include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk

DEB_DH_INSTALL_SOURCEDIR = $(DEB_DESTDIR)
CFLAGS += -DOWL_VERSION_STRING=\"\\\"$(shell dpkg-parsechangelog | sed -ne 's/Version: //p')\\\"\" -D_FORTIFY_SOURCE=2 

clean::
	rm -f perl/modules/Jabber/Makefile.old
	rm -f perl/modules/Jabber/Jabber.par
	rm -f perl/modules/IRC/Makefile.old perl/modules/WordWrap/Makefile.old
	rm -f perl/modules/IRC/IRC.par
